@import '../../../../node_modules/slick-carousel/slick/slick.css'
@import '../../../../node_modules/slick-carousel/slick/slick-theme.css'

.slick
  &-loading &-list
    background #fff center center no-repeat
  &-dots
    position  absolute
    left 47%
    bottom 10px
    margin-top 3rem
    text-align left
    font-size 0
    @media (max-width 768px)
      margin-top 1.5rem
    li button,
    li
      width 10px
      height 10px
    li
      border-radius 50%
      border .063rem solid #fff
      margin 3px
      //background rgba(#616161, 50%)
      &.slick-active
        background red
        width 10px
        height 10px
      // button,
      // button:before
      //   width w=16px
      //   height 16px
      //   border 1px solid #999
      button:before
        content ''
        font-family inherit
        width 6px
        height 6px
        border-radius 50%
        top 1px
        left 1px
        border 1px solid #999
        opacity 1

.slick-dotted.slick-slider
  margin-bottom 0
