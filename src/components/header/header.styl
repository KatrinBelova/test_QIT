.header
	background url('../images/laptop-layers.jpg') center no-repeat
	background-size cover
	position relative
	&::before
		position absolute
		content ''
		bottom -17px
		left 0
		width 50%
		height 10px
		background #000
		box-shadow 0 -13px 13px rgba(0,0,0,0.2)
		transform rotate(1deg)
	&::after
		position absolute
		content ''
		bottom -17px
		right 0
		width 50%
		height 10px
		background #000
		box-shadow 0 -10px 13px rgba(0,0,0,0.2)
		transform rotate(-1deg)
	&__logo
		width 175px
		height 216px
		margin-top 30px
	&__info
		display flex
		flex-direction column
		align-items flex-end
		text-align right
	&__languages
		display flex
		color #ccc
		font-size 18px
		font-weight 300
		margin-top 27px
	&__lang
		padding 0 11px 0 11px
	&__lang:last-child
		padding 0 11px 0 0
	h1
		color #fff
		text-transform uppercase
		font-size 25px
		font-weight 400
		margin-top 34px
		line-height 28px
	&__phone,
	&__email
		color red
	&__phone
		font-size 35px
		font-weight 400
		line-height 35px
		margin-top 12px
	&__email
		font-size 20px
		font-weight 400
		margin-bottom 20px
	&__caption,
	h2
		color red
		font-weight 700
	h2
		font-size 50px
		text-transform uppercase
	&__caption
		margin-top 65px
	&__caption p
		font-size 22px
		line-height 32px
	&__caption p:last-child
		font-size 30px
		font-weight 300
	&__benefits
		display flex
		flex-wrap wrap
		justify-content space-between
		margin-top 75px
		margin-bottom 60px
	&__item
		display flex
		flex-direction column
		align-items center
		text-align center
		width 220px
		min-height 120px
		margin-top 25px
	&__item:nth-child(3),
	&__item:nth-child(6)
		width 250px
	&__icon
		width 65px
		height 65px
	&__benefit
		color #000000
		font-size 18px
		font-weight 400
		line-height 20px
		display block
		margin-top 15px
	&__form
		position relative
		margin auto
		margin-top 85px
	.form__button
		margin-top 32px
	.form__title
		margin-top 15px
		margin-bottom 20px
	.form__message
		margin-top 15px
		text-align center

@media screen and (max-width: 1200px)
	.header
		&__item:nth-child(3),
		&__item:nth-child(6)
			width 220px
			
@media screen and (max-width: 992px)
	.header
		&__item,
		&__item:nth-child(3),
		&__item:nth-child(6)
			width 150px
		&__benefit
			font-size 15px
		&__benefits
			margin-top 20px
		h2
			font-size 35px
		&__caption p
			font-size 18px
		&__caption p:last-child
			font-size 30px
		&__phone
			font-size 28px
		&__info h1
			font-size 20px
			
@media screen and (max-width: 768px)
	.header
		&__caption,
		h2
			text-align center
		&__benefits
			justify-content space-around
			padding-left 100px
			padding-right 100px
		&__form
			margin-top 0
			margin-bottom 15px
			
@media screen and (max-width: 680px)
	.header
		&__benefits
			padding-left 40px
			padding-right 40px
		
@media screen and (max-width: 576px)
	.header
		&__benefits
			padding-left 0
			padding-right 0
		&::before,
		&::after
			display none
		&__logo
			display block
			margin auto
			margin-top 30px
		&__phone
			font-size 20px
		.form__message
			margin-bottom 15px
			
@media screen and (max-width: 480px)
	.header
		&__logo
			width (175px / 2)
			height (216px / 2)
		&__info h1
			font-size 16px
		&__form
			padding 30px 15px 20px 16px
		&__button
			margin auto
		&__item,
		&__item:nth-child(3),
		&__item:nth-child(6)
			width 130px
		h2
			font-size 24px
		&__caption
			margin-top 35px
		&__caption p
			font-size 12px
			line-height 26px
		&__caption p:last-child
			font-size 20px
