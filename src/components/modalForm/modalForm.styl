.modalForm
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	z-index 9999
	&__bg
		background rgba(0,0,0,0.5)
		width 100%
		height 100%
	&__window
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	&__form
		box-shadow 0 0 5px rgba(1, 2, 2, 0.75)
		padding 55px 80px 30px 80px
		min-height 400px
		.form__title
			padding-bottom 15px
			margin-bottom 20px
			border-bottom 1px solid red
	&__button
		margin-top 14px
		margin-bottom 20px