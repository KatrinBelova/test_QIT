.offer
	padding-bottom 60px
	&__caption
		margin-top 55px
		color red
		p
			&:nth-child(1),
			&:nth-child(2)
				font-weight 300
			&:nth-child(1)
				font-size 35px
				line-height 28px
			&:nth-child(2)
				font-size 50px
				line-height 64px
			&:nth-child(3)
				font-size 30px
				line-height 34px
				font-weight 700
				text-transform uppercase
	&__description
		color #333
		font-weight 300
		font-size 20px
		line-height 26px
		margin-top 10px
		span
			color red	
	&__list
		margin-top 25px
		overflow-x hidden
		padding-bottom 12px
		border-bottom 1px solid #999
	&__item
		display block
		position relative
	.slick-slide img
		display inline-block
	&__number
		color #ccc
		font-size 60px
		font-weight 100
	&__img
		cursor pointer
		max-width 496px
		max-height 272px
	&__about
		display inline-block
		max-width 400px
		margin-bottom 100px
		margin-left 40px
		text-align left
	h3
		color #333
		text-transform uppercase
		font-size 30px
		line-height 36px
		font-weight 700
		margin-top 65px
	&__benefit
		margin-top 55px 
		margin-bottom 40px
		padding 0 70px
		display flex
		flex-direction column
		align-items center
		text-align center
		img
			width 110px
			height 110px
			margin-bottom 30px
	&__button
		display block
		margin auto

.modal__img
	position fixed
	display none
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0,0,0,0.5)
	z-index 999
	cursor pointer
	img
		position absolute
		max-width 1170px
		top 50%
		left 50%
		transform translate(-50%, -50%)

@media screen and (max-width: 1200px)
	.offer
		.slick-dots
			left 57%
	.modal__img
		img
			max-width 990px
			
@media screen and (max-width: 992px)
	.offer
		&__item
			text-align center
		&__benefit
			padding 0
	.modal__img
		img
			max-width 95%
			
@media screen and (max-width: 965px)
	.offer
		&__caption
			margin-top 30px
			p
				&:nth-child(1)
					font-size 25px
					line-height 18px
				&:nth-child(2)
					font-size 40px
					line-height 54px
				&:nth-child(3)
					font-size 20px
					line-height 24px
		&__description
			font-size 16px
		&__about
			margin-bottom 10px
			display inline-flex
			justify-content center
			align-items center
			margin auto
		&__number
			margin-right 20px
		.slick-dots
			left 46%
			
@media screen and (max-width: 768px)
	.offer
		h3
			font-size 20px
			line-height 26px	
		&__benefit
			margin-top 25px
			margin-bottom 0
			img
				width 70px
				height 70px
				margin-bottom 20px
		&__button
			margin-top 20px
			
@media screen and (max-width: 480px)
	.offer
		&__caption
			margin-top 30px
			p
				&:nth-child(1)
					font-size 15px
					line-height 8px
				&:nth-child(2)
					font-size 30px
					line-height 44px
				&:nth-child(3)
					font-size 11px
					line-height 14px
		&__img
			max-width 300px
		&__description
			font-size 15px
			line-height 21px
		.slick-dots
			left 37%
