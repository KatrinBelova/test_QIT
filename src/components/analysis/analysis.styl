.analysis	
	padding-bottom 60px
	&__caption
		margin-top 55px
		margin-bottom 40px
		color red
		p
			&:nth-child(1),
			&:nth-child(2)
				font-weight 300
			&:nth-child(2)
				font-size 35px
				line-height 28px
			&:nth-child(1)
				font-size 50px
				line-height 64px
	&__description
		color #333
		font-size 18px
		font-weight 400
		padding-top 23px
		padding-bottom 20px
		p
			margin-bottom 20px
		&::after,
		&::before
			content ''
			position absolute
			left 15px
			width 410px
			height 1px
			background-color #999
		&::before
			top 0
		&::after
			bottom 0
	&__logo
		margin-top 30px
	&__about
		margin-top 25px
		font-size 18px
		line-height 24px
		font-weight 300
		color #333
		text-align center
	&__graph
		margin-top 60px
		
@media screen and (max-width: 992px)
	.analysis
		&__about
			font-size 15px
			
@media screen and (max-width: 768px)
	.analysis
		&__caption
			margin-top 25px
			margin-bottom 20px
			p
				&:nth-child(2)
					font-size 25px
					line-height 18px
				&:nth-child(1)
					font-size 40px
					line-height 54px
		&__description
			font-size 16px
			&::after,
			&::before
				width 300px
		&__about,
		&__graph
			margin-top 10px

@media screen and (max-width: 576px)
	.analysis
		&__caption
			p
				&:nth-child(2)
					font-size 20px
					line-height 13px
				&:nth-child(1)
					font-size 30px
					line-height 44px
					
@media screen and (max-width: 480px)
	.analysis
		&__caption
			p
				&:nth-child(2)
					font-size 20px
					line-height 23px
				&:nth-child(1)
					font-size 30px
					line-height 44px
		&__description
			font-size 15px
			padding-top 13px
			padding-bottom 10px
			&::after,
			&::before
				width 150px