.about
	background url('../images/horse.jpg') center no-repeat
	background-size cover
	position relative
	&__layer
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('../images/layout.png') center no-repeat
		background-size cover
		opacity 0.4
	&__description,
	&__subtitle
		color #e8e9e3
		text-align center
	&__description
		margin-top 50px
	&__description p
		font-size 20px
		line-height 26px
		font-weight 300
		margin-bottom 20px
	&__subtitle
		font-size 50px
		font-weight 100
		margin-bottom 45px
			
@media screen and (max-width: 920px)
	.about
		&__description p
			font-size 16px
		&__subtitle
			font-size 35px

@media screen and (max-width: 768px)
	.about
		&__description p
			font-size 14px
		&__subtitle
			font-size 30px
			
@media screen and (max-width: 670px)
	.about
		&__description
			margin-top 25px
		&__description p
			margin-bottom 10px
		&__subtitle
			font-size 28px
			
@media screen and (max-width: 576px)
	.about
		&__description,
		&__subtitle
			padding-left 100px
		&__description p
			font-size 15px
			line-height 22px
			
@media screen and (max-width: 480px)
	.about
		background-position 55%
		&__description p
			font-weight 500
			text-shadow 1px 1px 2px #000
		&__description,
		&__subtitle
			padding-left 0
		&__subtitle
			margin-bottom 20px