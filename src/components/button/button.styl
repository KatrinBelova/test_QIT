.button
  position relative
  top 0
  display inline-flex
  align-items center
  justify-content center
  vertical-align bottom
  min-width 230px
  padding 14px 2px 14px 2px
  border 0
  box-shadow 0 0 5px rgba(1, 1, 1, 0.75), inset 0 0 5px rgba(255, 255, 255, 0.36)
  background-color #cb0e17
  // background-image linear-gradient(to top, rgba(0, 4, 2, 0.38) 0%, rgba(255, 255, 255, 0.38) 100%)
  text-shadow 0 0 0 rgba(184, 191, 142, 0.25)
  color #fff
  font-size 15px
  font-weight 400
  line-height 1em
  text-transform uppercase
  text-align center
  cursor pointer
  text-decoration none
  transition .2s
  &:hover
    opacity .9
    box-shadow none
  &_block
    width 100%
  &_lg
    min-height 2.5rem
    padding .5rem 1.35rem
    font-size 1.5rem
